@model IEnumerable<BarberAppointmentSystem.Models.Employee>

<h2>Randevu Al</h2>

<form asp-action="BookAppointment" method="post">
    <div>
        <label>Çalışan Seç:</label>
        <select name="employeeId" class="form-control">
            @foreach (var employee in Model)
            {
                <option value="@employee.EmployeeId">@employee.FirstName @employee.LastName</option>
            }
        </select>
    </div>
    <div>
        <label>Tarih ve Saat:</label>
        <input type="datetime-local" name="appointmentDate" class="form-control" />
    </div>
    <div>
        <label>Hizmet:</label>
        <select name="serviceId" class="form-control">
            <!-- Servis bilgilerini ekleyin -->
        </select>
    </div>
    <div>
        <label>Müşteri ID:</label>
        <input type="number" name="customerId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Randevu Al</button>
</form>
