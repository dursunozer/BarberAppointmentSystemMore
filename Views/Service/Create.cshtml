@model IEnumerable<BarberAppointmentSystem.Models.Services>

<h2>Servisler</h2>
<a href="@Url.Action("Create", "Service")" class="btn btn-primary mb-3">Yeni Servis Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Servis Adı</th>
            <th>Ücret</th>
            <th>Yetkili Çalışanlar</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Price.ToString("C")</td>
                <td>
                    @if (service.Employees != null && service.Employees.Any())
                    {
                        <ul>
                            @foreach (var employee in service.Employees)
                            {
                                <li>@employee.FirstName @employee.LastName</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">Henüz atanmış çalışan yok</span>
                    }
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Service", new { id = service.ServiceId })" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="@Url.Action("Delete", "Service", new { id = service.ServiceId })" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
