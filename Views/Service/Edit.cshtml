@model BarberAppointmentSystem.Models.Services
<form method="post" asp-action="Edit" asp-controller="Service">
    <input type="hidden" asp-for="ServiceId" />

    <div class="form-group">
        <label>Servis Adı</label>
        <input type="text" asp-for="Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Açıklama</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-group">
        <label>Ücret</label>
        <input type="number" asp-for="Price" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Çalışanlar</label>
        @foreach (var employee in ViewBag.Employees)
        {
            <div class="form-check">
                <input type="checkbox" name="employeeIds" value="@employee.EmployeeId"
                @(Model.Employees != null && Model.Employees.Any(e => e.EmployeeId == employee.EmployeeId) ? "checked" : "") />
                <label class="form-check-label">@employee.FirstName @employee.LastName</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a href="@Url.Action("Index", "Service")" class="btn btn-secondary">Geri</a>
</form>
