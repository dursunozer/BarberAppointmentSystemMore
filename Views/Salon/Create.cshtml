@model BarberAppointmentSystem.Models.Customer

<h2>Yeni Müşteri Ekle</h2>

<form method="post" asp-action="Create">
    <div class="form-group mb-3">
        <label for="FirstName">Ad</label>
        <input type="text" asp-for="FirstName" class="form-control" placeholder="Adınızı giriniz" required />
    </div>

    <div class="form-group mb-3">
        <label for="LastName">Soyad</label>
        <input type="text" asp-for="LastName" class="form-control" placeholder="Soyadınızı giriniz" required />
    </div>

    <div class="form-group mb-3">
        <label for="Email">E-posta</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="E-posta adresinizi giriniz" required />
    </div>

    <div class="form-group mb-3">
        <label for="Phone">Telefon</label>
        <input type="tel" asp-for="Phone" class="form-control" placeholder="Telefon numaranızı giriniz" required />
    </div>

    <div class="form-group mb-3">
        <label for="Password">Şifre</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Şifrenizi giriniz" required />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>
