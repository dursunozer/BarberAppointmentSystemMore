@{
    ViewBag.Title = "Çalışan Paneli";
}

<div class="container mt-5">
    <!-- Hoş Geldiniz Mesajı -->
    <div class="row mb-4">
        <div class="col-md-12 text-center">
            <h1 class="display-5 text-success">Merhaba, @User.Identity.Name!</h1>
            <p class="lead">Bugün için planlanmış randevularınızı ve görevlerinizi buradan takip edebilirsiniz.</p>
        </div>
    </div>

    <div class="row">
        <!-- Günlük Randevular -->
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h4 class="card-title text-primary">Bugünkü Randevularınız</h4>
                    <p class="card-text text-muted">Aşağıda bugün için planlanan randevuların listesi yer alıyor:</p>

                    <ul class="list-group">
                        <!-- Örnek Veri -->
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Ahmet Yılmaz - 09:00
                            <span class="badge bg-primary">Onaylandı</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Zeynep Kaya - 11:30
                            <span class="badge bg-warning">Beklemede</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Mehmet Demir - 14:00
                            <span class="badge bg-success">Tamamlandı</span>
                        </li>
                    </ul>

                    <a href="/Appointments" class="btn btn-primary btn-sm mt-3">Tüm Randevuları Gör</a>
                </div>
            </div>
        </div>

        <!-- Genel İstatistikler -->
        <div class="col-md-4">
            <div class="card shadow-lg mb-3">
                <div class="card-body text-center">
                    <h5 class="card-title text-secondary">Günlük İstatistikler</h5>
                    <p class="card-text">
                        <strong>Randevu Sayısı:</strong> 5<br>
                        <strong>Tamamlanan:</strong> 3<br>
                        <strong>Bekleyen:</strong> 2
                    </p>
                    <a href="/Statistics" class="btn btn-outline-primary btn-sm">Detaylı İstatistik</a>
                </div>
            </div>

            <div class="card shadow-lg">
                <div class="card-body text-center">
                    <h5 class="card-title text-secondary">Görev Yönetimi</h5>
                    <p class="card-text">
                        Güncel görevlerinizi kontrol edin ve yeni görevler ekleyin.
                    </p>
                    <a href="/Tasks" class="btn btn-outline-success btn-sm">Görev Yönetimine Git</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Motivasyon Alanı -->
    <div class="row mt-5">
        <div class="col-md-12 text-center">
            <blockquote class="blockquote text-center">
                <p class="mb-0 text-secondary">"Başarı, her gün yapılan küçük çabaların birikimidir."</p>
                <footer class="blockquote-footer">Robert Collier</footer>
            </blockquote>
        </div>
    </div>
</div>
